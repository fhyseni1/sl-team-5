<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.71.0" />
    <PackageReference Include="Grpc.Net.Client" Version="2.71.0" />
    <PackageReference Include="Grpc.Tools" Version="2.72.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Google.Protobuf" Version="3.32.1" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <!-- Client-side gRPC generated from MedicationService proto -->
    <Protobuf Include="..\..\MedicationService\MedicationService.API\Protos\medication.proto" GrpcServices="Client" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\UserHealthService.Application\UserHealthService.Application.csproj" />
    <ProjectReference Include="..\UserHealthService.Infrastructure\UserHealthService.Infrastructure.csproj" />
    <ProjectReference Include="..\UserHealthService.Domain\UserHealthService.Domain.csproj" />
  </ItemGroup>

</Project>
